#include<iostream>
using namespace std;
int main()
{
    int arr[100],x,l, i;
    cout<<"Enter the No of Array you want to print: ";
    cin>>x;
    cout<<"Enter " <<x<<" Array Elements: ";
    for(i=0; i<x; i++)
        cin>>arr[i];
    l= arr[0];
    for(i=1; i<x; i++)
    {
        if(l<arr[i])
            l= arr[i];
    }
    cout<<"Largest Number ="<<l<<endl;

    return 0;
}
